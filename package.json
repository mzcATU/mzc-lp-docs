{
  "name": "lms-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @lms/web dev",
    "dev:api": "pnpm --filter @lms/api dev",
    "dev:all": "pnpm run dev & pnpm run dev:api",
    "build": "pnpm --filter @lms/web build",
