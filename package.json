    "lint": "pnpm -r lint",
    "preview": "pnpm --filter @lms/web preview"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
